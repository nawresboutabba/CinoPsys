<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="185dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:id="@+id/cv_wish"
        app:cardCornerRadius="5dp"
        android:layout_height="180dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <ImageView
                android:id="@+id/m_poster"
                android:layout_width="116dp"
                android:src="@drawable/sample_poster"
                android:scaleType="fitXY"
                android:layout_height="180dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/m_title"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Space between us"
                    android:textSize="20dp"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_year"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/imdb"
                        />

                    <TextView
                        android:id="@+id/m_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:lines="1"
                        android:text="9.0"
                        />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blue_grey900"
                    android:text="Available in:"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/avail_720p"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="720p"
                        />
                    <TextView
                        android:id="@+id/avail_1080p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        android:layout_marginLeft="20dp"
                        android:text="1080p"
                        />
                    <TextView
                        android:id="@+id/avail_3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        android:layout_marginLeft="20dp"
                        android:text="3D"
                        />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

            <TextView
                android:id="@+id/m_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Added on 12-12-2017"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:textColor="@color/blue_grey900"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="136dp"
                />

            <View
                android:id="@+id/m_color"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/PriceColor" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>